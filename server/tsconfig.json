{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "api/types"],
    "baseUrl": ".", // Add this to resolve paths
   "paths": {
  "types/*": ["api/types/*"]
}
  },
  "include": ["./**/*.ts", "src", "api/types"],
  "exclude": ["node_modules", "dist"]
}