{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "types"],
    "baseUrl": ".", // Add this to resolve paths
   "paths": {
  "types/*": ["types/*"]
}
  },
  "include": ["./**/*.ts","api/**/*", "routes/**/*", "config/**/*", "database/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist"]
}
